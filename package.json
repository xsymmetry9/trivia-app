{
  "name": "trivia-app",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "frontend": "cd frontend && yarn start",
    "backend": "cd backend && nodemon app.js",
    "dev": "concurrently \"npm run frontend\" \"npm run  backend\"",
    "build:frontend": "cd packages/frontend && npm install && npm run build",
    "build:backend": "cd packages/backend && npm install && npm run build",
    "start:frontend": "cd packages/frontend && npm run start",
    "start:backend": "cd packages/backend && npm run start",
    "build": "npm run build:frontend && npm run build:backend"
  },
  "keywords": [],
